{% extends 'layout/layout' %}

{% block breadcrumbs %}
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 h-50" height="200" src="http://via.placeholder.com/1500x250" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100 h-50" height="200" src="http://via.placeholder.com/1500x250" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock breadcrumbs %}

{% block title %}
    {{ translate('News and Updates') }}
{% endblock title %}

{% block content %}
    {% for news in newsList %}
        <div class="blog margin-bottom-30">
            <h3>{{ news.getTitle }}</h3>
            <div class="blog-post-tags">
                <ul class="list-unstyled list-inline blog-info">
                    <li><i class="fa fa-calendar"></i> {{ dateTimeFormatTime(news.getCreated) }}</li>
                </ul>
            </div>
            <div class="blog-content-image">{{ news.getMemo|raw }}</div>
        </div>
    {% endfor %}


    {% if newsList %}
        {{ paginationControl(newsList, 'Sliding', 'p-server-core/paginator', {'route' : 'PServerCore/site-news'}) }}
    {% endif %}

{% endblock content %}